	</owl:Class>

	<!-- Oils Class (Matt)-->
	<owl:Class rdf:ID="Oils">
		<rdfs:label>Oils</rdfs:label>
		<owl:disjointWith rdf:resource="#Vegetables" />
		<owl:disjointWith rdf:resource="#Grains" />
