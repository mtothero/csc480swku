	</owl:Class>

	<!-- Cusine Class (Matt)-->
	<owl:Class rdf:ID="Cuisine">
		<rdfs:label>Cuisine</rdfs:label>
		<owl:unionOf rdf:parseType="Collection">
			<owl:Class rdf:about="#French" />
