	<!-- hasDifficulty Property (Mike)-->
	<owl:ObjectProperty rdf:about="hasDifficulty">
		<rdfs:domain rdf:resource="#Recipe"/>
		<rdfs:range rdf:resource="#Difficulty"/>
	</owl:ObjectProperty>
    
    <!-- uses Property(Ruben) -->
    <owl:ObjectProperty rdf:about="uses">
        <rdfs:domain rdf:resource="#Recipe"/>
        <rdfs:domain rdf:resource="#KitchenTools"/>
    </owl:ObjectProperty>
