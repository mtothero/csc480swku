		<owl:disjointWith rdf:resource="#ProteinFoods" />
		<owl:disjointWith rdf:resource="#Dairy" />
		<owl:disjointWith rdf:resource="#Oils" />
		<owl:disjointWith rdf:resource="#MiscFoods" />
