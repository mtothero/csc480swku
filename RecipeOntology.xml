		<rdfs:range rdf:resource="#healthStatus"/>
	</owl:ObjectProperty>

	<!-- hasAllergy Property (Mike)-->
	<owl:ObjectProperty rdf:about="hasAllergy">
		<rdfs:domain rdf:resource="#Recipe"/>
