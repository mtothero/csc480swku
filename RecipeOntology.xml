	<!-- Temperature Class (Mike)-->
	<owl:Class rdf:ID="Temperature">
		<rdfs:label>Temperature</rdfs:label>
		<owl:unionOf rdf:parseType="Collection">
			<owl:Class rdf:about="#Hot" />
