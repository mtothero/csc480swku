		<owl:disjointWith rdf:resource="#Dairy" />
		<owl:disjointWith rdf:resource="#Oils" />
		<owl:disjointWith rdf:resource="#MiscFoods" />
	</owl:Class>

	<!-- Dairy Class (Matt)-->
	<owl:Class rdf:ID="Dairy">
		<rdfs:label>Dairy</rdfs:label>
		<owl:disjointWith rdf:resource="#Vegetables" />
